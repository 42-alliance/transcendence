datasource db {
  provider = "sqlite"
  url      = env("PRISMA_CHAT_DATABASE_PATH")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

model Message {
  id            Int   @id @default(autoincrement())
  content       String
  disscusionId  Int
  disscution    Disscution @relation(fields: [disscusionId], references: [id])
}

model Disscution {
  id        Int   @id @default(autoincrement())
  messages  Message[]
  actor     Json 
}