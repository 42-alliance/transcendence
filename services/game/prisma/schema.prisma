// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider = "sqlite"
    url      = env("PRISMA_GAME_DATABASE_PATH")
}

generator client {
    provider      = "prisma-client-js"
}

model Game {
    id           Int       @id @default(autoincrement())
    playerOne    String
    playerTwo    String
    scoreOne     Int       @default(0)
    scoreTwo     Int       @default(0)
    winner       String?
    startedAt    DateTime  @default(now())
    endedAt      DateTime?
}

