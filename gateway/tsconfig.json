{
	"compilerOptions": {
	  "target": "ES2024",
	  "module": "ESNext",
	  "moduleResolution": "node",
	  "outDir": "./.objs",
	  "esModuleInterop": true,
	  "forceConsistentCasingInFileNames": true,
	  "strict": true,
	  "skipLibCheck": true,
	  "typeRoots": [
		"./node_modules/@types",
		"./src/@types"
	  ],
	  "resolveJsonModule": true,
	  "sourceMap": true
	},
	"include": [
	  "src/**/*"
	],
	"exclude": [
	  "node_modules",
	  ".objs"
	]
}